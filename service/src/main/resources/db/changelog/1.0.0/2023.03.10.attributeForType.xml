<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <property name="uuid_type" value="uuid" dbms="postgresql"/>
    <property name="uuid_type" value="uniqueidentifier" dbms="mssql"/>
    <property name="uuid_type" value="RAW(16)" dbms="oracle"/>
    <property name="uuid_type" value="uuid" dbms="h2"/>


    <changeSet id="create Attribute for product type" author="novosselov.pavel@gmail.com">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="type_attribute"/>
            </not>
        </preConditions>

        <createTable tableName="type_attribute" remarks="Связь типов продукта и атрибутов">
            <column name="producttypeid" type="${uuid_type}">
                <constraints nullable="false" primaryKeyName="pk_type_attribute"/>
            </column>
            <column name="producttypeattributeid" type="${uuid_type}">
                <constraints nullable="false" primaryKeyName="pk_type_attribute"/>
            </column>
        </createTable>

        <addPrimaryKey
                columnNames="producttypeid, producttypeattributeid"
                constraintName="pk_type_attribute"
                tableName="type_attribute"/>
    </changeSet>
		
</databaseChangeLog>
